using System;
namespace nm
{
    class Program
    {
        static void Main(string[] args)
        {
            string s = Console.ReadLine();
            string[] str = s.Split();
            int a = int.Parse(str[0]);
            int b = int.Parse(str[1]);
            int c = int.Parse(str[2]);
            Console.WriteLine(string.Format("{0}\n{1}\n{2}\n{3}",(a+b)%c,((a%c)+(b%c))%c,(a*b)%c,((a%c)*(b%c))%c));
        }
    }
}
